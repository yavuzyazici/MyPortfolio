@model List<Yavuz_Selim_Yazıcı.DAL.Entities.Testimonial>

<div class="s-testimonials">

    <div class="overlay"></div>

    <div class="row testimonials-header">
        <div class="col-full">
            <h1 class="h02">Insanlar Hakkımda Neler Diyorlar.</h1>
        </div>
    </div>

    <div class="row testimonials">

        <div class="col-full testimonials__slider">

            @foreach (var item in Model)
            {
                <div class="testimonials__slide">
                    <img src="@item.ImageUrl@*~/images/avatars/user-06.jpg*@" alt="@item.NameSurname + "Fotoğrafı" class="testimonials__avatar">
                    <p>
                        @item.Description@*Bu adam harika bir yazılımcı. Kurduğum bu sosyal medya platformunu kodlayacaklar!!*@
                    </p>
                    <div class="testimonials__author h06">
                        @item.NameSurname@*Ali Gül*@
                        <span>@item.Title@*Çaycı, Funny Page*@</span>
                    </div>
                </div>
            }
